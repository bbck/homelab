{
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    ":disableRateLimiting"
  ],
  "kubernetes": {
    "fileMatch": [
      "k8s/.+\\.yaml$"
    ]
  },
  "flux": {
    "fileMatch": [
      "k8s/.+\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "k8s/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "excludePackagePatterns": [
        "^ghcr\\.io/fluxcd/.*"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/onedr0p/plex"
      ],
      "versioning": "loose"
    },
    {
      "matchDatasources": [
        "custom.grafana-dashboards"
      ],
      "commitMessageTopic": "dashboard {{depName}}"
    },
    {
      "groupName": "flux-operator",
      "matchPackageNames": [
        "/flux-operator/",
        "/flux-instance/"
      ]
    },
    {
      "groupName": "fluxcd/flux2",
      "matchPackageNames": [
        "fluxcd/flux2",
        "controlplaneio-fluxcd//distribution"
      ]
    },
    {
      "groupName": "1password",
      "matchPackageNames": [
        "docker.io/1password/*",
        "docker.io/1password/*"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.yaml$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+(:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+/(?<currentValue>(v|\\d)[^/]+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^k8s\\/.+\\.yaml$/"
      ],
      "matchStrings": [
        "depName=\"(?<depName>.*)\"\\n(?<indentation>\\s+)gnetId: (?<packageName>\\d+)\\n.+revision: (?<currentValue>\\d+)"
      ],
      "autoReplaceStringTemplate": "depName=\"{{{depName}}}\"\\n{{{indentation}}}gnetId: {{{packageName}}}",
      "datasourceTemplate": "custom.grafana-dashboards",
      "versioningTemplate": "regex:^(?<major>\\d+)$"
    }
  ],
  "customDatasources": {
    "grafana-dashboards": {
      "defaultRegistryUrlTemplate": "https://grafana.com/api/dashboards/{{packageName}}",
      "format": "json",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $string(revision)}]}"
      ]
    }
  }
}
